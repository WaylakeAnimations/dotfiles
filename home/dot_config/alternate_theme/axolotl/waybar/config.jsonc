{
    "layer": "top",
    "position": "bottom",
    "height": 20,
    // "width": 1280,
    "spacing": 4, // Gaps between modules (4px)

    "modules-left": [
        "hyprland/workspaces",
        "custom/theme",
        "custom/mpvpaper-toggle"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "memory",
        "pulseaudio",
        "battery",
        "backlight",
        "tray",
	"custom/notification"
    ],
    "custom/theme": {
        "on-click": "~/.config/alternate_theme/apply.sh axolotl",
        "on-click-right": "~/.config/alternate_theme/apply.sh hanako",
        "format": "üëï",
        "tooltip-format": "LMB : axolotl // RMB : hanako"
    },
    "custom/mpvpaper-toggle": {
        "on-click": "~/.config/alternate_theme/mpvpaper.sh",
        "format": "üñºÔ∏è",
        "tooltip-format": "Toggle mpvpaper"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
	"format": "{:%H:%M - %d-%b-%Y}",
	"tooltip": true,
	"tooltip-format": "<tt>{calendar}</tt>",
	"calendar": {
		"mode": "month",
		"mode-mon-col": 3,
		"weeks-pos": "",
		"on-scroll": 1,
		"on-click-right": "mode",
		"format": {
			"months": "<span color='#2FB4FF'><b>{}</b></span>",
			"days": "<span color='#ffffff'><b>{}</b></span>",
			"weekdays": "<span color='#9a9a9a'><b>{}</b></span>",
			"today": "<span color='#ffa101'><b>{}</b></span>"
			}
		},
	"actions": {
		"on-click-right": "mode",
		"on-scroll-up": "shift_up",
		"on-scroll-down": "shift_down",
		}
    },
    "memory": {
	"interval": 3,
        "format": "RAM : {used} GiB / {total} GiB",
	"on-click": "kitty htop",
	"on-click-right": "kitty s-tui",
	"tooltip": true,
	"tooltip-format": "LMB : htop // RMB : s-tui"
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "scroll-step": 2,
	"tooltip": true,
	"tooltip-format": "Brightness, click to toggle night light",
	"on-click": "/home/Waylake/.config/gammastep/toggle-gammastep.sh",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "format": "{capacity}% {icon} ",
        "format-full": "{capacity}% {icon} ",
        "format-charging": "{capacity}% Ôóß ",
        "format-plugged": "{capacity}% Ôá¶ ",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "pulseaudio": {
        "scroll-step": 2,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî",
        "format-muted": "Ôö©",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}
